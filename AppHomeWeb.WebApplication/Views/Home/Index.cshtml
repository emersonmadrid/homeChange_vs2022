<script>
    var Inicio = function () {

        return {
            init: function (uri, tipoCambioMoneda, venta, compra, recursos) {
                tipoCambioMoneda = 0;
                var htmlIn;
                var htmlOut;

                //			$('#modal-informativo').modal({
                //				backdrop : 'static',
                //				keyboard : false
                //			});


                actualizarValoresMoneda();
                function actualizarValoresMoneda() {
                    if (tipoCambioMoneda == 0) {
                        htmlIn = "SOLES";
                    } else {
                        htmlIn = "DÓLARES";
                    }
                    $('#tipoMonedaEntrante').text(htmlIn);




                    if (tipoCambioMoneda == 0) {
                        htmlOut = "DÓLARES";
                    } else {
                        htmlOut = "SOLES";
                    }
                    $('#tipoMonedaSaliente').text(htmlOut);
                }


                //			#####################   CALCULAR TIPO DE CAMBIO ###########################
                //			####  0 arriba -> abajo   ###  1 abajo -> arriba   ########################

                $('#inp-resultado').keyup(function (evt) {
                    // Backspace = 8, Enter = 13, â€˜0â€² = 48, â€˜9â€² = 57, â€˜.â€™ = 46, â€˜-â€™ = 43
                    var tempValue = $('#inp-resultado').val();
                    if (tempValue == "") {
                        $('#inpt-cambiar').val("");
                        $('#inp-resultado').val("");
                    } else {
                        if (filter(tempValue) === false) {
                            return false;
                        } else {
                            calcularMonto(tempValue, 1);
                            return true;
                        }
                    }
                });


                $('#inpt-cambiar').keyup(function (evt) {
                    // Backspace = 8, Enter = 13, â€˜0â€² = 48, â€˜9â€² = 57, â€˜.â€™ = 46, â€˜-â€™ = 43
                    var tempValue = $('#inpt-cambiar').val();
                    if (tempValue == "") {
                        $('#inpt-cambiar').val("");
                        $('#inp-resultado').val("");
                    } else {
                        if (filter(tempValue) === false) {
                            return false;
                        } else {
                            calcularMonto(tempValue, 0);
                            return true;
                        }
                    }
                });

                function filter(__val__) {
                    var preg = /^([0-9]+\.?[0-9]{0,2})$/;
                    if (preg.test(__val__) === true) {
                        return true;
                    } else {
                        return false;
                    }

                }

                function calcularMonto(val, direccion) {
                    var resultado;


                    if (direccion == 0) {
                        if (tipoCambioMoneda < 1) {
                            // SOLES A DOLARES 
                            resultado = roundToX(parseFloat(val) / parseFloat(venta), 2);

                        } else {
                            //DOLARES A SOLES 
                            resultado = roundToX(parseFloat(val) * parseFloat(compra), 2);
                        }
                        $('#inp-resultado').val(resultado);
                    } else {
                        if (tipoCambioMoneda < 1) {
                            //DOLARES A SOLES 
                            resultado = roundToX(parseFloat(val) * parseFloat(venta), 2);
                        } else {
                            // SOLES A DOLARES 
                            resultado = roundToX(parseFloat(val) / parseFloat(compra), 2);
                        }
                        $('#inpt-cambiar').val(resultado);
                    }

                }

                function roundToX(num, X) {
                    return +(Math.round(num + "e+" + X) + "e-" + X);
                }

                //			####################    CAMBIAR MONEDA ##############################
                $('#cambiarMoneda').on('click', function () {
                    tipoCambioMoneda = (tipoCambioMoneda == 0 ? 1 : 0);
                    calcularMonto($('#inpt-cambiar').val(), 0);
                    actualizarValoresMoneda();
                });


                $('.tab-switcher').on('click', function () {
                    $("#cotizaImg").attr("src", recursos + "img/pasos/cotiza2.png");
                    $("#RegistraImg").attr("src", recursos + "img/pasos/icono-registra-azul-proceso-securex.png");
                    $("#transfiereImg").attr("src", recursos + "img/pasos/icono-transfiere-proceso-cambiar-securex.png");
                    $("#recibeImg").attr("src", recursos + "img/pasos/icono-recibe-proceso-cambiar-securex.png");

                    var paso = $(this).data("value");
                    var idPaso = "#" + paso + "Img";
                    $(idPaso).attr("src", recursos + "img/pasos/" + paso + "1.png");

                });



            }
        }
    }();

    $(function () {
        $('body').addClass('home');
        Inicio.init("/", "", "3.645", "3.618", "https://securexweb.s3.amazonaws.com/Resources/WebContent/public/web/");
    });

</script>



